[core]
    editor=vim
    fileMode = false
[user]
    name = Muhammed Haque
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
    renormalize = true
[alias]
    bm=!git b master
    co=checkout
    cp=cherry-pick
    d=difftool
    dc=!git d --cached
    di=diff
    dic=diff --cached
# only modified
    dm=difftool --diff-filter=M
    f=fetch --all --prune
    git=!git
# pretty log
    l=!git ll -15
# log for one file
    lf=!git lp --follow
# pretty log full message
    la=log --graph --pretty=format:'%C(blue)%<(15)%cr%Creset %C(yellow)%h%Creset %C(red)%<(25)%ce%Creset %<(15)%n%C(bold green)%s%Creset'
    ll=!git lp --graph
    lm=!git ll --author=$(git config user.email)
    lp=log --pretty=format:'%C(blue)%<(15)%cr%Creset %C(yellow)%h%Creset %C(red)%<(25)%ce%Creset %C(bold green)%<(95,trunc)%s%Creset'
    m=merge
    mm=merge master
    ms=merge staging
    mt=mergetool
    pm=pull origin master
    rh=reset @
    rhh=reset --hard @
    s=status
    sl=stash list
    smi=submodule init
    sms=submodule status
    smu=submodule update
    sp=stash pop --index
    ss=stash show -p
    st=stash --include-untracked
    stpa=stash --patch
    stu=stash --keep-index
    uc=reset --soft @^
    uch=reset --hard @^
[include]
    path=~/.gitconfig_platform
    path=~/.gitconfig_type
    path=~/.gitconfig_aliases
    path=~/.gitconfig_aliases_platform
    path=~/.gitconfig_aliases_type
